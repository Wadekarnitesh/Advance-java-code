package com.emp;

import java.util.Arrays;
import java.util.List;
import java.util.Scanner;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.EntityTransaction;
import javax.persistence.Persistence;
import javax.persistence.Query;

import hibernate.Car;

public class EmpCRUD {

	static EntityManagerFactory emf = Persistence.createEntityManagerFactory("pg");
	static EntityManager em = emf.createEntityManager();
	static Scanner sc = new Scanner(System.in);

	public void insertEmp() {
		EntityTransaction et = em.getTransaction();
		Emp e1 = new Emp();
		System.out.println("Eneter a Id: ");
		e1.setEmpId(sc.nextInt());

		System.out.println("Enter a name");

		e1.setName(sc.next());
		System.out.println("Enter a salary");
		e1.setSalary(sc.nextDouble());
		System.out.println("Enter a Phone no");

		e1.setPhno(sc.nextLong());
		et.begin();

		em.persist(e1);
		et.commit();

		System.out.println("Data insertes successfully");

	}

	public void updateEmp() {
		EntityTransaction et = em.getTransaction();
		System.out.println("Enter a EMP Id ");
		Emp e1 = em.find(Emp.class, sc.nextInt());
		if (e1 != null) {
			System.out.println("Which value you want to uadate ");
			System.out.println("1: Name");
			System.out.println("2: Salary");
			System.out.println("3: Phone No");
			switch (sc.nextInt()) {
			case 1: {
				System.out.println("Enter a name");
				e1.setName(sc.next());
				break;
			}
			case 2: {
				System.out.println("Enter a salary");
				e1.setSalary(sc.nextDouble());
				break;
			}
			case 3: {
				System.out.println("enter a Phone no. ");
				e1.setPhno(sc.nextLong());
				break;
			}
			default:
				System.out.println("Invalid option");

			}
			et.begin();
			em.merge(e1);
			et.commit();
			System.out.println("data Upadated");
		} else {
			System.out.println("Emp not Exist");
		}
	}
	public void FetchAll() {
		EntityTransaction et = em.getTransaction();

		Query q = em.createQuery("from Emp");

		List<Emp> emps = q.getResultList();
		System.out.println(emps);
		System.out.println();
		for (Emp e1 : emps) {
			System.out.println(e1.getEmpId());
			System.out.println(e1.getEmpName());
			System.out.println(e1.getSalary());
			System.out.println(e1.getPhno());
			System.out.println("-------------");
		}

	}

	public void fetchEmp() {
		EntityTransaction et = em.getTransaction();
		System.out.println("Enter a EMP Id ");
		Emp e1 = em.find(Emp.class, sc.nextInt());

		if (e1 != null) {
			System.out.println(e1.getEmpId());
			System.out.println(e1.getEmpName());
			System.out.println(e1.getSalary());
			System.out.println(e1.getPhno());
		} else {
			System.out.println("No emp Found");
		}
	}

	public void deleteEmp() {
		EntityTransaction et = em.getTransaction();
		System.out.println("Enter a EMP Id ");

		Emp e1 = em.find(Emp.class, sc.nextInt());

		if (e1 != null) {
			et.begin();
			em.refresh(e1);
			et.commit();
			System.out.println("delete Successful");
		} else {
			System.out.println("EMP not Found....");
		}
	}

	public static void main(String[] args) {
		EmpCRUD e1 = new EmpCRUD();

		for (;;) {
			System.out.println();

			System.out.println("1: Insert EMP ");
			System.out.println("2: fetch Data OF EMP");
			System.out.println("3: Fetch Data of all EMP");
			System.out.println("4: Update EMP Infomation");
			System.out.println("5: Delete EMP ");

			System.out.println("Select a Option: ");

			switch (sc.nextInt()) {
			case 1:
				e1.insertEmp();
				break;
			case 2:
				e1.fetchEmp();
				break;
			case 3:
				e1.FetchAll();
				break;
			case 4:
				e1.updateEmp();
				break;
			case 5:
				e1.deleteEmp();
				break;

			default:
				System.out.println("Invalid Option");
			}
			System.out.println();

		}
	}

}
